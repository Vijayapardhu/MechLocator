# MechLocator Environment Variables Template
# ======================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Django Settings
# ======================================
SECRET_KEY=django-insecure-your-super-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Google Maps API Configuration
# ======================================
# Get your API key from: https://console.cloud.google.com/
# Enable: Maps JavaScript API, Places API, Geocoding API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Database Configuration
# ======================================
# For development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL example)
# DATABASE_URL=postgresql://username:password@localhost:5432/mechlocator

# Email Configuration (for OTP Authentication)
# ======================================
# Gmail SMTP Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=MechLocator <noreply@yourdomain.com>

# OTP Settings
# ======================================
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=3

# Security Settings
# ======================================
# For production, set these to True
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True
SESSION_COOKIE_HTTPONLY=True

# Content Security Policy (for production)
CSP_DEFAULT_SRC="'self'"
CSP_STYLE_SRC="'self'" "'unsafe-inline'" "https://fonts.googleapis.com"
CSP_SCRIPT_SRC="'self'" "https://maps.googleapis.com" "https://maps.gstatic.com"
CSP_IMG_SRC="'self'" "data:" "https://maps.googleapis.com" "https://maps.gstatic.com"
CSP_FONT_SRC="'self'" "https://fonts.gstatic.com"

# Static and Media Files
# ======================================
STATIC_ROOT=staticfiles
MEDIA_ROOT=media
STATIC_URL=/static/
MEDIA_URL=/media/

# Logging Configuration
# ======================================
LOG_LEVEL=INFO
LOG_FILE=logs/mechlocator.log

# Cache Configuration (for production)
# ======================================
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# Session Configuration
# ======================================
SESSION_COOKIE_AGE=3600  # 1 hour
SESSION_EXPIRE_AT_BROWSER_CLOSE=False
SESSION_SAVE_EVERY_REQUEST=True

# Password Validation
# ======================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SPECIAL_CHARS=True

# Rate Limiting (for production)
# ======================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour

# Google Maps Configuration
# ======================================
GOOGLE_MAPS_LIBRARIES=places,geometry
GOOGLE_MAPS_VERSION=3.54
GOOGLE_MAPS_REGION=US
GOOGLE_MAPS_LANGUAGE=en

# Development Settings
# ======================================
# Set to False in production
DEBUG_TOOLBAR=False
DEBUG_TOOLBAR_CONFIG=SHOW_TOOLBAR_CALLBACK

# Testing Configuration
# ======================================
TEST_RUNNER=django.test.runner.DiscoverRunner
TEST_DATABASE_URL=sqlite:///test_db.sqlite3

# Backup Configuration
# ======================================
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Monitoring and Analytics
# ======================================
ENABLE_ANALYTICS=True
ANALYTICS_TRACKING_ID=GA_TRACKING_ID_HERE

# Third-party Integrations
# ======================================
# Stripe (for future payment integration)
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Twilio (for SMS notifications)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Cloudinary (for image hosting)
# CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Production Settings (set these when deploying)
# ======================================
# Set DEBUG=False in production
# DEBUG=False

# Set your domain in production
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Use HTTPS in production
# SECURE_SSL_REDIRECT=True
